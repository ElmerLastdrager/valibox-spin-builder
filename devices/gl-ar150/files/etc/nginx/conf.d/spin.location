location /spin {
    include /etc/nginx/fastcgi_params;
    fastcgi_buffering off;
    fastcgi_pass 127.0.0.1:8002;
}
# For tcpdump, we want to relax timeouts and disable buffering
location /spin/tcpdump_start {
    include /etc/nginx/fastcgi_params;
    fastcgi_pass 127.0.0.1:8002;
    fastcgi_buffering off;
    fastcgi_read_timeout 300s;
}
